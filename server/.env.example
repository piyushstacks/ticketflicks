# Server Configuration
PORT=3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
# Alternative for MongoDB Atlas: 
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net

# The Movie Database (TMDB) API
# Get your API key from: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# Stripe Configuration
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Configuration (SMTP)
# For Gmail, enable 2FA and use App Password
SMTP_USER=your_smtp_user@gmail.com
SMTP_PASS=your_smtp_password_here
SENDER_EMAIL=your_sender_email@gmail.com

# Clerk Configuration (Server-side)
# Get from: https://dashboard.clerk.com/
CLERK_SECRET_KEY=sk_your_clerk_secret_key_here

# Inngest Configuration (if needed for background jobs)
# Get from: https://app.inngest.com/
INNGEST_EVENT_KEY=your_inngest_event_key_here
INNGEST_SIGNING_KEY=signkey_your_inngest_signing_key_here